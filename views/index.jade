doctype html
html(lang="en")
    head
        title Mailgun Transactional demo in NodeJS
        //Latest compiled and minified CSS & JS 
        link(rel='stylesheet', media='screen', href='//netdna.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap.min.css')
    body
        include ./includes/navbar.jade
        .container 
            form(id="mgform")
                legend Welcome to a Mailgun form
                .form-group
                    label(for="mail") Email
                    input(type="text" id="mail" placeholder="Youremail@address.com")
                .btn-group
                    button(value="bulk" onclick="mgform.hid=this.value").btn.btn-primary Send transactional
                    button(value="list" onclick="mgform.hid=this.value").btn.btn-info Add to list
                    button(value="inv" onclick="mgform.hid=this.value").btn.btn-danger Send invoice
        script(src='//code.jquery.com/jquery.js')
        script(src='//netdna.bootstrapcdn.com/bootstrap/3.3.2/js/bootstrap.min.js')
        script(type="text/javascript" src="main.js")